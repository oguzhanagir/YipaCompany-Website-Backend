@model IEnumerable<Yipa.Entities.Concrete.Service>

<div class="agency" style="margin-top: 150px;" id="listService">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-sm-12">
                <h3 class="about-title pl-5" style="font-size: 40px; font-weight: 800;">How Our Agency <br>Can Help</h3>
            </div>
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-sm-12">
                    <div class="card-features border p-5 mt-5" style="height: 350px;">
                        <img class="img-fluid" style="width: 50px; height: 50px;" src="/assets/images/development-icon.svg"
                         alt="Features Professional Icon">
                        <h4 class="about-title pt-4" style="font-size: 20px; font-weight: 800;">Web Site</h4>
                        <p class="text h-25">
                            Tanıtım Sitesi
                            Blog Sitesi
                            E-Ticaret Sitesi
                        </p>
                        <button class="mt-3 btn button-light bg-transparent pl-4 pr-4 pt-2 pb-2 mt-3">Daha Fazlası</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>