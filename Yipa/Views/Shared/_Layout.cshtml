<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description"
    content="YİPA Blog Web Sitesi Yazılım, SEO, Amazon gibi Kategorilerde Hizmet ve Danışmanlık Vermektedir.">
  <meta name="keywords" content="Yazılım, Amazon, SEO, Etsy, EBay, E-Ticaret, Blog">
  <meta name="author" content="Yiğit Parmkasız">
  <meta name="publisher" content="Oğuzhan Ağır">
  <meta name="robots" content="noindex,nofollow">

  <!-- Bootstrap CSS -->
  <link href="~/assets/css/bootstrap.min.css" rel="stylesheet" />
  <link href="~/assets/css/light-theme.css" rel="stylesheet" />
  <title>YİPA Blog ve Danışmanlık</title>
</head>

<body>
  <!-- Navbar Start -->
  <nav class="navbar navbar-expand-lg fixed-top bg-light  navbar-light" style="margin-bottom:80px;">
    <a class="navbar-brand ml-5" style="padding: 0px !important;" href="#">
      <img style="width: 90px; height: 80px;" class="img-fluid" src="/assets/images/logo.svg" alt="YİPA Logo">
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
      aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav menu-items mr-auto m-auto">
        <li class="nav-item active">
          <a class="nav-link" href="/">Ana Sayfa <span class="sr-only">(current)</span></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/Blog/Index">Blog</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/Service/Index">Hizmetlerimiz</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/About/Index">Hakkımızda</a>
        </li>
        <li class="nav-item">

          <a class="nav-link" href="/Contact/Index">İletişim</a>
        </li>
      </ul>

      <div class="navbar-social-media mr-4">
        <ul class="navbar-nav">
          <li class="nav-item navbar-social-media-li ">
            <a href="https://www.instagram.com">
              <span class="fa-stack fa-lg ">
                <i class="fa fa-circle fa-stack-2x navbar-social-media-circle"></i>
                <i class="fa fa-instagram fa-stack-1x fa-inverse "></i>
              </span>
            </a>
          </li>
          <li class="nav-item navbar-social-media-li ">
            <a href="https://www.twitter.com">
              <span class="fa-stack fa-lg ">
                <i class="fa fa-circle fa-stack-2x navbar-social-media-circle"></i>
                <i class="fa fa-twitter fa-stack-1x fa-inverse "></i>
              </span>
            </a>
          </li>
          <li class="nav-item navbar-social-media-li ">
            <a href="https://www.facebook.com">
              <span class="fa-stack fa-lg ">
                <i class="fa fa-circle fa-stack-2x navbar-social-media-circle"></i>
                <i class="fa fa-facebook fa-stack-1x fa-inverse "></i>
              </span>
            </a>
          </li>
          <li class="nav-item navbar-social-media-li ">
            <a href="https://www.linkedin.com">
              <span class="fa-stack fa-lg ">
                <i class="fa fa-circle fa-stack-2x navbar-social-media-circle"></i>
                <i class="fa fa-linkedin fa-stack-1x fa-inverse "></i>
              </span>
            </a>
          </li>
        </ul>
      </div>

    </div>
  </nav>
  <!-- Navbar End -->

  

  <!-- Section Start -->
  <section>
      @RenderBody()
  </section>
  <script src="https://kit.fontawesome.com/5b5cc926ba.js" crossorigin="anonymous"></script>
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="~/lib/jquery/dist/jquery.js"></script>
  <script src="~/js/bootstrap.min.js"></script>
</body>

</html>