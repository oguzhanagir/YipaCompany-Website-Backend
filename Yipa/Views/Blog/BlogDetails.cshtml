@model IEnumerable<Yipa.Entities.Concrete.Blog>
@{
    ViewData["Title"] = "BlogDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@foreach (var item in Model)
{
    <div class="container" style="margin-top:50px; padding:135px">
        <div class="row">
            <div class="col-lg-12 col-sm-12">
                <h1 class="text-center" style="font-weight:bold;color:#0E183A;font-size:50px">@item.Title</h1>
            </div>
            <div class="col-lg-12 col-sm-12 content-blog-details text-center m-auto mt-5">
                <img class="img-fluid w-75 mt-5" src="~/@item.ImagePath" />
                <p style="margin-top:80px; text-align:start!important; color:rgba(57, 20, 0, 0.64); font-weight:600">@Html.Raw(@item.Content)</p>
            </div>
        </div>
    </div>

}


@await Component.InvokeAsync("LatestBlogs")