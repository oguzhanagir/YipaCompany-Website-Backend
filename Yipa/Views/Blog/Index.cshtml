@model IEnumerable<Yipa.Entities.Concrete.Blog>
@using X.PagedList;
@using X.PagedList.Mvc
@using X.PagedList.Mvc.Core
@using X.PagedList.Web.Common

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("~/Views/Blog/BlogHeader.cshtml")
@await Component.InvokeAsync("PopularBlogs")




<div class="blog-list" id="blogList" style="margin-top:100px; margin-bottom:80px">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-sm-12">
                <h2 class="about-title mb-5">Tüm Bloglar</h2>
            </div>
            <div class="col-lg-12 col-sm-12">
                @await Component.InvokeAsync("CategoryList")
            </div>
            @if (Model != null)
            {
                @foreach (var item in Model)
                {
                    <div class="col-lg-4 col-md-6 col-sm-12">
                        <a href="/Blog/BlogDetails/@item.Id">
                            <img class="img-fluid" src="@item.ImagePath" alt="">
                            <p class="about-subtitle mt-3"></p>
                            <h4 class="about-title pr-3" style="font-size: 24px;">@item.Title</h4>
                            <p class="about-text mt-3">@item.PublicDate</p>
                        </a>
                    </div>
                }
            }
            else
            {
                <p>Model is null.</p>
            }

            <div class="col-lg-12 col-sm-12">
                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-center">
 @Html.PagedListPager((IPagedList)Model!, page => Url.Action("Index", "Blog", new { page }))</ul>
                </nav>
            </div>
        </div>

    </div>
</div>


@Html.Partial("~/Views/Newsletter/MainNewsletter.cshtml")
@Html.Partial("~/Views/Home/Footer.cshtml")
